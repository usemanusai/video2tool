# Video2Tool Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Directories
TEMP_DIR=./temp
OUTPUT_DIR=./output
UPLOAD_DIR=./uploads

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# OpenRouter API (for AI models)
# Get your API key from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Model Settings
DEFAULT_MODEL=anthropic/claude-3-opus-20240229
FALLBACK_MODEL=openai/gpt-4-turbo

# Processing Limits
MAX_CHUNK_SIZE=4000
MAX_TOKENS_PER_REQUEST=16000
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60

# =============================================================================
# DATABASE CONFIGURATION (SUPABASE)
# =============================================================================

# Supabase Configuration
# Get these from your Supabase project dashboard: https://supabase.com/
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# =============================================================================
# PROJECT MANAGEMENT INTEGRATIONS (OPTIONAL)
# =============================================================================

# Trello Integration
# Get API key from: https://trello.com/app-key
TRELLO_API_KEY=your_trello_api_key_here
TRELLO_API_TOKEN=your_trello_api_token_here

# GitHub Integration
# Create a personal access token: https://github.com/settings/tokens
GITHUB_API_TOKEN=your_github_personal_access_token_here

# ClickUp Integration
# Get API token from: https://app.clickup.com/settings/apps
CLICKUP_API_TOKEN=your_clickup_api_token_here

# =============================================================================
# BACKEND NODE.JS SETTINGS
# =============================================================================

# Node.js Environment
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGIN=*

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================

# API URLs (for frontend)
REACT_APP_API_URL=http://localhost:8000
REACT_APP_SOCKET_URL=http://localhost:8000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Video Processing
# These are handled by the application, but you may need to install:
# - FFmpeg for video processing
# - Tesseract for OCR (if using text extraction)

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Memory Optimization
BACKEND_WORKERS=1
NODE_MEMORY_LIMIT=2048
PYTHON_MEMORY_OPTIMIZATION=true
